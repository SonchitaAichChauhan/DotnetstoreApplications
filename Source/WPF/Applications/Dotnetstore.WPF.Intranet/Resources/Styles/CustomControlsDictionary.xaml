<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:customControls="clr-namespace:Dotnetstore.WPF.CustomControls;assembly=Dotnetstore.WPF.CustomControls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/materialdesigntheme.window.xaml" />
        <ResourceDictionary Source="pack://application:,,,/Dotnetstore.WPF.Intranet;component/Resources/Styles/BasicDictionary.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="MenuItemStyle" TargetType="{x:Type customControls:MenuItem}">
        <Setter Property="MenuItemFontSize" Value="14"/>
        <Setter Property="MenuItemForeground" Value="{StaticResource ForeGround}"/>
        <Setter Property="MenuItemIconHeight" Value="25"/>
        <Setter Property="MenuItemIconWidth" Value="25"/>
        <Setter Property="MenuItemOnMouseOverColor" Value="{StaticResource DarkColor}"/>
    </Style>
</ResourceDictionary>